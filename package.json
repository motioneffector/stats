{
  "name": "@motioneffector/stats",
  "version": "0.1.0",
  "description": "TypeScript library for RPG stats, dice rolling, and stat checks with full D&D 5e-style mechanics",
  "author": "motioneffector",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/motioneffector/stats"
  },
  "homepage": "https://github.com/motioneffector/stats#readme",
  "bugs": {
    "url": "https://github.com/motioneffector/stats/issues"
  },
  "keywords": [
    "rpg",
    "dice",
    "dice-roller",
    "dice-notation",
    "stats",
    "d20",
    "tabletop",
    "game-mechanics",
    "dungeons-and-dragons",
    "dnd",
    "5e",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./testing": {
      "import": "./dist/testing.js",
      "types": "./dist/testing.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "fuzz:thorough": "NODE_OPTIONS='--expose-gc --max-old-space-size=8192' FUZZ_THOROUGH=1 vitest run src/fuzz.test.ts --testTimeout=120000 --pool=forks --poolOptions.forks.singleFork",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts'",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  }
}
